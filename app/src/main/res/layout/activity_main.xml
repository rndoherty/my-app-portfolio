<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/">

    <TextView android:text="Ryan Doherty&apos;s" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtName"
        android:textAlignment="center"
        android:textSize="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000" />

    <TextView
        android:text="Udacity App Portfolio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitle"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/txtName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="rndoherty.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtURL"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtBackground"
        android:layout_above="@+id/txtURL"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#999999"
        android:layout_below="@+id/txtTitle" />

    <Button style="@style/AppPortfolioButtonsDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/btnSpotifyStreamer"
        android:textSize="24dp"
        android:layout_below="@+id/txtTitle"
        android:onClick="displayToast"
        android:layout_alignLeft="@+id/btnCapstone"
        android:layout_alignStart="@+id/btnCapstone"
        android:layout_alignRight="@+id/btnCapstone"
        android:layout_alignEnd="@+id/btnCapstone" />

    <Button style="@style/AppPortfolioButtonsDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/btnScoresApp"
        android:textSize="24dp"
        android:layout_below="@+id/btnSpotifyStreamer"
        android:onClick="displayToast"
        android:layout_alignRight="@+id/btnCapstone"
        android:layout_alignEnd="@+id/btnCapstone"
        android:layout_alignLeft="@+id/btnCapstone"
        android:layout_alignStart="@+id/btnCapstone" />

    <Button style="@style/AppPortfolioButtonsDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/btnLibraryApp"
        android:textSize="24dp"
        android:layout_below="@+id/btnScoresApp"
        android:onClick="displayToast"
        android:layout_alignLeft="@+id/btnCapstone"
        android:layout_alignStart="@+id/btnCapstone"
        android:layout_alignRight="@+id/btnCapstone"
        android:layout_alignEnd="@+id/btnCapstone" />

    <Button style="@style/AppPortfolioButtonsDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/btnBuildItBigger"
        android:textSize="24dp"
        android:layout_below="@+id/btnLibraryApp"
        android:onClick="displayToast"
        android:layout_alignLeft="@+id/btnCapstone"
        android:layout_alignStart="@+id/btnCapstone"
        android:layout_alignRight="@+id/btnCapstone"
        android:layout_alignEnd="@+id/btnCapstone" />

    <Button style="@style/AppPortfolioButtonsDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/btnXYZReader"
        android:textSize="24dp"
        android:layout_below="@+id/btnBuildItBigger"
        android:onClick="displayToast"
        android:layout_alignRight="@+id/btnCapstone"
        android:layout_alignEnd="@+id/btnCapstone"
        android:layout_alignLeft="@+id/btnCapstone"
        android:layout_alignStart="@+id/btnCapstone" />

    <Button style="@style/AppPortfolioButtonsCapstone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/btnCapstone"
        android:textSize="24dp"
        android:onClick="displayToast"
        android:layout_below="@+id/btnXYZReader"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
